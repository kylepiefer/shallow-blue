<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shallowblue.shallowblue.MultiplayerSettings"
    android:background="#c8200a">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Load Game"
        android:id="@+id/loadgame"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp"
        android:onClick="loadinggame"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Game"
        android:id="@+id/customgame"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="creatinggame" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start New Game"
        android:id="@+id/newgame"
        android:layout_below="@+id/customgame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:onClick="PVPGameStart"/>
</RelativeLayout>
