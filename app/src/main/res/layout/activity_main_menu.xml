<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8200a"
    tools:context="com.shallowblue.shallowblue.MainMenu"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <Button
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:text="Play Multiplayer"
            android:id="@+id/multiplayer"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:onClick="multiplayerSettings"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Play Singleplayer"
            android:id="@+id/singleplayer"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13"
            android:onClick="singleplayerSettings"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Options/Settings"
            android:id="@+id/options"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13"
            android:onClick="optionsSettings"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>
