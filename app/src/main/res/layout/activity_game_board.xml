                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/GameBoardActivity_undo" />

                    <Button android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/GameBoardActivity_redo" />

                </LinearLayout>

                <Button android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/GameBoardActivity_suggest_alternate_move" />

                <Button android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/GameBoardActivity_start_helper" />

            </LinearLayout>

